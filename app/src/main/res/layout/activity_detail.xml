<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="@dimen/activity_margin"
  android:descendantFocusability="beforeDescendants"
  android:focusableInTouchMode="true"
  android:orientation="vertical"
  tools:context=".DetailActivity"
  >
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
      style="@style/CategoryStyle"
      android:text="@string/category_overview"
      />
    <EditText
      android:id="@+id/edit_item_name"
      style="@style/EditorFieldStyle"
      android:layout_weight="2"
      android:hint="@string/hint_product_name"
      android:inputType="textCapWords"
      android:visibility="gone"
      />
    <TextView
      android:id="@+id/text_view_product_name"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:layout_marginBottom="10dp"
      android:fontFamily="sans-serif"
      android:text="Name 11111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111111"
      android:textAppearance="?android:textAppearanceMedium"
      />
  </LinearLayout>
  <LinearLayout
    android:id="@+id/container_quantity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
      style="@style/CategoryStyle"
      android:text="@string/category_quantity"
      />
    <EditText
      android:id="@+id/edit_quantity"
      style="@style/EditorFieldStyle"
      android:layout_weight="2"
      android:hint="@string/hint_quantity"
      android:inputType="number"
      android:visibility="gone"
      />
    <LinearLayout
      android:id="@+id/linear_layout_quantity_category"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      >
      <TextView
        android:id="@+id/text_view_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:textAppearance="?android:textAppearanceMedium"
        tools:text="99999"
        />
      <Button
        android:id="@+id/button_decrease"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="-"
        />
      <Button
        android:id="@+id/button_increase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="+"
        />
    </LinearLayout>
  </LinearLayout>
  <LinearLayout
    android:id="@+id/container_price"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
      style="@style/CategoryStyle"
      android:text="@string/category_price"
      />
    <TextView
      android:id="@+id/text_view_display_price"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:layout_marginBottom="10dp"
      android:fontFamily="sans-serif"
      android:textAppearance="?android:textAppearanceMedium"
      tools:text="1234567890"
      />
    <RelativeLayout
      android:id="@+id/relative_layout_price_category"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:visibility="gone"
      >
      <EditText
        android:id="@+id/edit_item_price"
        style="@style/EditorFieldStyle"
        android:layout_width="match_parent"
        android:hint="@string/hint_item_price"
        android:inputType="number"
        />
      <TextView
        android:id="@+id/label_price_units"
        style="@style/EditorUnitsStyle"
        android:text="@string/item_price"
        />
    </RelativeLayout>
  </LinearLayout>
</LinearLayout>
